<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heba.tadbeer">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".Util.Tbr"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BillsActivity"
            android:label="@string/title_activity_bills"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CardsActivity"
            android:label="@string/title_activity_cards"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WarrantiesActivity"
            android:label="@string/title_activity_warranties"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
